<div class="form-page">
  <div class="container">
    <h1>Share <%= @project.internal_name %></h1>
    <div class="row">
      <div class="col-form">
        <form action="<%= perform_share_project_path(id: @project.id) %>" class="ui-form" method="get">
          <div class="form-group">
            <div class="form-group__form-label">
            <label class="control-label">User</label>
          </div>
            
      <div class="form-group__form-input">
        <select name="user_id" class="form-control">
        <option />
        <%= User.all.each do |u| %>
        <option value="<%= u.id %>"><%= u.email %></option>
        <% end %>
        </select>
        </div>
      </div>

          <input type="submit" value="Share" class="btn btn-primary" style="display: block; margin: auto" />
        </form>
      </div>
    </div>
  </div>
</div>
