<div class="form-page">
  <div class="container">
    <h1>Sign in</h1>
    <div class="row">
      <div class="col-form">
        <%= render 'shared/form_error_messages', model: @user %>

        <%= form_tag sign_in_path, method: :post, class: 'ui-form' do %>
          <div class="form-group">
            <div class="form-group__form-label">
              <%= label_tag :email, 'Email', class: 'control-label' %>
            </div>
            <div class="form-group__form-input">
              <%= text_field_tag :email, params[:email], class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="form-group__form-label">
              <%= label_tag :password, 'Password', class: 'control-label' %>
            </div>
            <div class="form-group__form-input">
              <%= password_field_tag :password, params[:password], class: 'form-control' %>
            </div>
          </div>

          <div class="form-group form-group--submit">
            <%= submit_tag 'Sign in', class: 'btn btn-lg btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
